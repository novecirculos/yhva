{
  "source": ["input/**/*.json"],
  "platforms": {
    "js": {
      "transformGroup": "js",
      "buildPath": "build/js/",
      "files": [
        {
          "destination": "index.js",
          "format": "javascript/es6"
        }
      ]
    },
    "css": {
      "transformGroup": "css",
      "buildPath": "build/css/",
      "files": [
        {
          "destination": "variables.css",
          "format": "css/variables"
        }
      ]
    },
    "ts": {
      "transformGroup": "js",
      "buildPath": "build/js/",
      "files": [
        {
          "destination": "index.d.ts",
          "format": "typescript/es6-declarations"
        }
      ]
    }
  }
}
